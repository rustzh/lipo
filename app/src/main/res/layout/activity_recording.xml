<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height ="match_parent"
    android:background="@color/black"
    tools:context=".recordingActivity">

    <TextView
        android:id="@+id/clock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_clock"
        android:text=""
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/recordingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/recordingOffButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="CCTV 녹화 중"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <ImageButton
        android:id="@+id/recordingOffButton"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_centerInParent="true"
        android:background="@color/black"
        android:scaleType="centerCrop"
        android:src="@drawable/recording" />


</RelativeLayout>